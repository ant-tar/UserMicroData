<div class="vcard">
	<span class="fn">[[+fullname]]</span>
	<span class="nickname">[[+nickname]]</span>
	<div class="org">[[+company]]</div>
	<img class="photo" src="[[+image]]"/>
	<a class="url" href="[[+website]]">[[+website]]</a>,
	<a class="email" href="mailto:[[+email]]">[[+email]]</a>
	<div class="tel">[[+phone]]</div>
	<div class="adr">
		<div class="street-address">[[+address]]</div>
		<span class="locality">[[+city]]</span>,
		<abbr class="region" title="[[+state]]">[[+state]]</abbr>,
		<span class="postal-code">[[+zip]]</span>
		<div class="country-name">[[+country]]</div>
	</div>
	<time class="bday">[[+bday]]</time>
</div>